{
  "manifest_version": 2,

  "name": "RecordReplay",
  "description": "Automated Testing Suite",
  "author": "Tom Gallagher",
  "version": "1.0.0.1",
  
  "default_locale": "en",
  "incognito": "not_allowed",
  
  "icons": {
      "16" : "images/cyan_car_16.png",
      "48" : "images/cyan_car_48.png",
      "128" : "images/cyan_car_128.png"
  },
  
  "browser_action": {
      "default_icon": {
        "19": "images/grey_car_19.png",
        "38": "images/grey_car_38.png"
      },
      "default_title": "Automated Testing Suite"
  },
  
  "options_page": "options.html",
  
  "options_ui": {
      "page": "options.html",
      "chrome_style": true,
      "open_in_tab": false
  },
  
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "exclude_globs": ["*chrome://*", "*chrome-extension://*", "*ide.c9.io/tomgallagher/turboserver*", "*turbobrowser-eu.herokuapp.com*", "*console.aws.amazon.com*", "c9.io"],
      "js": ["scripts/fastSettings.min.js", "utils/Rx.min.js", "scripts/mutation-summary.js"],
      "run_at": "document_start"
    },
    {
      "matches": ["http://*/*", "https://*/*"],
      "exclude_globs": ["*chrome://*", "*chrome-extension://*", "*ide.c9.io/tomgallagher/turboserver*", "*turbobrowser-eu.herokuapp.com*", "*console.aws.amazon.com*", "c9.io"],
      "js": ["scripts/font-optimizer.js"],
      "run_at": "document_start"
    },
    {
      "matches": ["http://*/*", "https://*/*"],
      "exclude_globs": ["*chrome://*", "*chrome-extension://*", "*ide.c9.io/tomgallagher/turboserver*", "*turbobrowser-eu.herokuapp.com*", "*console.aws.amazon.com*", "c9.io"],
      "js": ["scripts/style-optimizer.min.js"],
      "run_at": "document_start"
    },
    {
      "matches": ["http://*/*", "https://*/*"],
      "exclude_globs": ["*chrome://*", "*chrome-extension://*", "*ide.c9.io/tomgallagher/turboserver*", "*turbobrowser-eu.herokuapp.com*", "*console.aws.amazon.com*", "c9.io"],
      "js": ["scripts/script-optimizer.min.js"],
      "run_at": "document_start"
    },
    {
      "matches": ["http://*/*", "https://*/*"],
      "exclude_globs": ["*chrome://*", "*chrome-extension://*", "*ide.c9.io/tomgallagher/turboserver*", "*turbobrowser-eu.herokuapp.com*", "*console.aws.amazon.com*", "c9.io"],
      "js": ["scripts/imagesloaded.pkgd.min.js", "scripts/page-event-listener.min.js"],
      "run_at": "document_start"
    },
    {
      "matches": ["http://*/*", "https://*/*"],
      "exclude_globs": ["*chrome://*", "*chrome-extension://*", "*ide.c9.io/tomgallagher/turboserver*", "*turbobrowser-eu.herokuapp.com*", "*console.aws.amazon.com*", "c9.io"],
      "js": ["scripts/service-worker-monitor.min.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["http://*/*", "https://*/*"],
      "exclude_globs": ["*chrome://*", "*chrome-extension://*", "*ide.c9.io/tomgallagher/turboserver*", "*turbobrowser-eu.herokuapp.com*", "*console.aws.amazon.com*", "*google*", "*mail.google*", "*www.bing*", "c9.io", "*ebay*", "*skype.com*", "*reuters.com*", "*wikipedia.org*"],
      "js": ["scripts/site-sweep.min.js"],
      "run_at": "document_idle"
    }
    
  ],
  
  "background": {
      "persistent": true,
      "scripts": [
          "scripts/jquery-3.1.1.min.js", 
          "utils/Rx.min.js", 
          "utils/dexie.min.js", 
          "scripts/base64.min.js", 
          "background/background.min.js", 
          "utils/storage.min.js", 
          "utils/encoding.min.js", 
          "background/networkHandler.min.js", 
          "background/cssHandler.min.js", 
          "background/javascriptHandler.min.js", 
          "background/adBlockHandler.min.js", 
          "background/fontHandler.min.js", 
          "background/imageHandler.min.js", 
          "background/videoHandler.min.js", 
          "background/ajaxCalls.min.js", 
          "background/pageStatsHandler.min.js", 
          "background/rightClickHandler.min.js", 
          "background/serverHandler.min.js", 
          "background/messaging.min.js", 
          "background/privacyHandler.min.js", 
          "utils/userHandler.min.js", 
          "background/testsuite.js", 
          "background/resemble.js"
        ]
  },

  "permissions": [
    "tabs",
    "activeTab",
    "gcm",
    "storage",
    "cookies",
    "privacy",
    "unlimitedStorage",
    "webRequest",
    "webRequestBlocking",
    "webNavigation",
    "browsingData",
    "history",
    "contextMenus",
    "debugger",
    "<all_urls>"
  ],
  
  "content_security_policy": "script-src 'self' https://checkout.stripe.com; object-src 'self'; child-src https://checkout.stripe.com",
  
  "web_accessible_resources": [
      
